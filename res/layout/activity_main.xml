<!-- The layout of the Application; the 'onClick' of the buttons refers to methods in MainActivity -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/appRelativeLayout"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity$MyFragment1" >
    
    <android.support.v4.view.ViewPager
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/textboxback"
        android:ems="16"
        android:inputType="text"
        android:singleLine="true"
        android:textIsSelectable="true"
        android:hint="@string/EditTextHint"
        android:focusable="true" 
		android:descendantFocusability="beforeDescendants"
		android:imeOptions="actionSend" />

    <ImageButton
        android:id="@+id/button_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_marginBottom="-10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-14dp"
        android:contentDescription="@string/button1"
        android:src="@drawable/av_play"
        android:onClick="startForecast" />
    <!-- API 11+: style="?android:attr/borderlessButtonStyle" -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/previous"
        android:onClick="goBack"
        android:longClickable="false"
        android:src="@drawable/navigation_previous_item" />
    <!-- API 11+: style="?android:attr/borderlessButtonStyle" -->

    <ImageButton
        android:id="@+id/button_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/next"
        android:onClick="goForward"
        android:longClickable="false"
        android:src="@drawable/navigation_next_item" />
    <!-- API 11+: style="?android:attr/borderlessButtonStyle" -->

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_forecast"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="-8dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/settingsButton"
        android:onClick="goToSettings"
        android:longClickable="false"
        android:src="@drawable/action_settings" />
    <!-- API 11+: style="?android:attr/borderlessButtonStyle" -->

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_forecast"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/aboutButton"
        android:onClick="showForecastInformation"
        android:longClickable="false"
        android:src="@drawable/action_about" />
    <!-- API 11+: style="?android:attr/borderlessButtonStyle" -->

</RelativeLayout>